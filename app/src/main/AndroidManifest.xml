<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="im.dema.aweather">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="im.dema.aweather.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="im.dema.aweather.ContentProviders.CitiesContentProvider"
            android:authorities="im.dema.aweather.cities"
            android:exported="true" />

        <provider
            android:name="im.dema.aweather.ContentProviders.CurrentWeatherContentProvider"
            android:authorities="im.dema.aweather.current_weather"
            android:exported="true" />

    </application>

    <instrumentation android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="im.dema.aweather.test"
        android:label="Qnext Redirect Tests" />

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>


</manifest>
